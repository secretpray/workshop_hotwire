<%= turbo_frame_tag dom_id(@album, :hovercard), target: "_top" do %>
  <div class='flex flex-row w-full'>
    <div class='flex flex-col w-1/3'>
      <div class='text-rose-600 font-semibold mb-2' style='width: 9rem;'>
        <%= @album.title %>
      </div>
      <% if @album.cover.attached? %>
          <%= image_tag @album.cover,
                      size: '100',
                      style: "height: max-content; width: 9rem;" %>
      <% end %>
      <%= link_to @album.artist.name, artist_path(@album.artist), class: "" %>
    </div>
    <div class='flex flex-col fs-[14px] ml-2 w-2/3'>
      <% @album.tracks.limit(10).pluck(:title, :duration).each do |title, duration| %>
        <div class=''>
          <%= title %> (<%= duration %>)
        </div>
      <% end %>
    </div>
  </div>
<% end %>