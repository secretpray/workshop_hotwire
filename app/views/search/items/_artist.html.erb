<div class="flex w-full align-center my-0.5">
  <%= link_to artist_path(artist), 
              class: "text-rose-600 font-semibold hoverWrapper", 
              data: { action: 'click->search#clearAfter' } do %>
    <%= artist.name %>
    <div id="hoverContent" style='min-width: 420px !important;'>
      <%= turbo_frame_tag dom_id(artist, :hovercard), 
                          target: "_top", 
                          role: "tooltip", 
                          src: hovercard_artist_path(artist), 
                          loading: :lazy do %>
        Loading...
      <% end %>
    </div>    
  <% end %>    
</div>
