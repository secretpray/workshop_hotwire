<%- content_for :content do %>
  <%= render partial: "shared/nav" %>

  <div class="main">
    <%= turbo_stream_from :live_stations %>
    <%= yield %>
  </div>

  <%= render partial: "albums/aside" %>

  <div id="player" data-turbo-permanent class="contents">
    <%- if current_user&.live_station&.live? %>
      <%= render partial: "player/player", locals: {station: current_user.live_station, track: current_user.live_station.current_track, live: true} %>
    <% end %>
  </div>
<%- end -%>

<%= render template: "layouts/core" %>
