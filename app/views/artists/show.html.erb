<div class="artist-header">
  <div class="artist-image">
    <% if artist.cover.attached? %>
      <%= image_tag artist.cover %>
    <% end %>
  </div>
  <div class="artist-info">
    <div class="flex items-center">
      <h1 class="text-header-2"><%= artist.name %></h1>
    </div>
    <div>
      <% artist.tags.each do |tag| %>
        <span class="meta"><%= tag %></span>
      <% end %>
    </div>
  </div>
</div>

<hr class="my-4">

<div class='flex mt-4 justify-between items-center'>
  <h2 class="text-header-2">Popular</h2>
  <%= link_to "See all", 
              tracks_artist_path(artist), 
              class: "icon-btn",
              data: {turbo_frame: 'tracks-page-1'} %>
</div>
<ul class="tracks mt-2">
  <%= render 'popular', tracks:, 
                        artist:,
                        current_position: 0,
                        tracks_size: @tracks_size %>
</ul>

<hr class="my-4"/>

<%= render partial: "discography", locals: {artist:, albums:} %>
